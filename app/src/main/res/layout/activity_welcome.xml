<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.grifapp.activities.WelcomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center">
        <TextView
            android:id="@+id/mHello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:text="@string/mHello"/>
        <TextView
            android:id="@+id/mWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:text="@string/mWelcome"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <ImageView
                android:id="@+id/imageViewPromotions"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/promotions"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/imageViewLocations"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/locations"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rusia"
            android:id="@+id/countryTextView"
            android:textSize="28dp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rusia"
            android:id="@+id/ciyTextView"
            android:textSize="22dp"
            android:layout_below="@+id/countryTextView"
            android:gravity="center"/>
        <com.androidnetworking.widget.ANImageView
            android:id="@+id/weatherImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_weather"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cielo despejado"
            android:id="@+id/wheaterTextView"
            android:layout_below="@+id/weatherImageView"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textTemperatura"
            android:id="@+id/temperaturaTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sizeWeather"
            android:id="@+id/tempTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textHumedad"
            android:id="@+id/humidity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sizeWeather"
            android:id="@+id/humidityTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textPresion"
            android:id="@+id/pressure"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sizeWeather"
            android:id="@+id/pressureTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textTemperaturaMin"
            android:id="@+id/tempMin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sizeWeather"
            android:id="@+id/tempMinTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textTemperaturaMax"
            android:id="@+id/tempMax"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sizeWeather"
            android:id="@+id/tempMaxTextView"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
